<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TheAwesomeMovieApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/corduroy_500</item>
        <item name="colorPrimaryVariant">@color/corduroy_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/red_400</item>
        <item name="colorSecondaryVariant">@color/red_900</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.TheAwesomeMovieApp.NoActionBar" parent="Base.Theme.TheAwesomeMovieApp">
        <item name="android:windowFullscreen">true</item>
        <!-- desabilita titulo do app na action bar -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TheAwesomeMovieApp.Button" parent="Widget.AppCompat.Button.Small">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Theme.TheAwesomeMovieApp.ActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:textColorSecondary">@color/white</item>

    </style>
</resources>